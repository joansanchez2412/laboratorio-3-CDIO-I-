#include <Wire.h>

#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);
int pin_trig = 2;
int pin_echo = 3;

void setup()
{
  lcd.init();          
  lcd.backlight();
  pinMode(pin_trig, OUTPUT);
  pinMode(pin_echo, INPUT);
}

void loop()
{
  digitalWrite(pin_trig, LOW);
  delayMicroseconds(2);
  digitalWrite(pin_trig, HIGH);
  delayMicroseconds(10);
  digitalWrite(pin_trig, LOW);
 
  long duracion = pulseIn(pin_echo, HIGH);
  float distancia = duracion * 0.034 / 2;

  lcd.setCursor(0, 0); 
  lcd.print("el objeto esta");
  
  if (distancia < 30){
  	lcd.setCursor(0, 1);
  	lcd.print("menor de 30cm   ");
  }
  else if (30<=distancia && distancia<60){
    lcd.setCursor(0,1);
    lcd.print("entre 30 y 60cm  ");
  }
  else if (60<=distancia){
    lcd.setCursor(0,1);
    lcd.print("mayor a 60cm   ");
  }
              
  else {
    lcd.setCursor(0,1);
    lcd.print("fuera de rango   ");
  }
  delay(200);
}
