#include <Wire.h>

#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);
int pin_trig = 2;
int pin_echo = 3;

void setup()
{
  lcd.init();          
  lcd.backlight();
  pinMode(pin_trig, OUTPUT);
  pinMode(pin_echo, INPUT);
}

void loop()
{
  digitalWrite(pin_trig, LOW);
  delayMicroseconds(2);
  digitalWrite(pin_trig, HIGH);
  delayMicroseconds(10);
  digitalWrite(pin_trig, LOW);
 
  long duracion = pulseIn(pin_echo, HIGH);
  float distancia_cm = duracion * 0.034 / 2;
  float distancia_in = distancia_cm / 2.54;

  lcd.setCursor(0, 0); 
  lcd.print(distancia_cm, 1);
  lcd.print("cm   ");
  lcd.setCursor(0, 1);  
  lcd.print(distancia_in, 1);
  lcd.print("in   ");   
  
  delay(200);
}
